<!DOCTYPE html>
<html>
  <head>
    <title>Real Estate Tinder</title>
    <%= csrf_meta_tags %>

    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>" async defer></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: '/site/header' %>
    <%= render partial: '/site/dropdown' %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

    <script>
    $('.ui.dropdown')
      .dropdown()
    ;
    </script>
  </body>
</html>
